{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@orion76/utils": ["packages/utils/src"],
      "@orion76/clapp": ["packages/cli/src"],
      "@orion76/clapp-command":["./packages/command/src"],
      // "youtube/*": ["../video-cli/src/youtube/*"]
    }
  },
  "include": [
    "src/**/*",
    "packages/utils/src/logger/utils.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 